{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/platform/src",
  "monorepo": true,
  "root": "apps/platform",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "apps/platform/tsconfig.app.json"
  },
  "projects": {
    "platform": {
      "type": "application",
      "root": "apps/platform",
      "entryFile": "main",
      "sourceRoot": "apps/platform/src",
      "compilerOptions": {
        "tsConfigPath": "apps/platform/tsconfig.app.json"
      }
    },
    "integration": {
      "type": "application",
      "root": "apps/integration",
      "entryFile": "main",
      "sourceRoot": "apps/integration/src",
      "compilerOptions": {
        "tsConfigPath": "apps/integration/tsconfig.app.json"
      },
      "common": {
        "type": "library",
        "root": "libs/common",
        "entryFile": "index",
        "sourceRoot": "libs/common/src",
        "compilerOptions": {
          "tsConfigPath": "libs/common/tsconfig.lib.json"
        }
      },
      "dao": {
        "type": "library",
        "root": "libs/dao",
        "entryFile": "index",
        "sourceRoot": "libs/dao/src",
        "compilerOptions": {
          "tsConfigPath": "libs/dao/tsconfig.lib.json"
        }
      }
    }
  }
}
