{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "roots": [
    "<rootDir>/apps/",
    "<rootDir>/libs/"
  ],
  "moduleNameMapper": {
    "^@libs/dao(|/.*)$": "<rootDir>/libs/dao/src/$1",
    "^@libs/common(|/.*)$": "<rootDir>/libs/common/src/$1"
  }
}
